<?xml version="1.0" encoding="utf-8"?>
<!--    tools:context=".main.MainActivity">-->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/primero"
    android:backgroundTint="@color/material_on_surface_emphasis_high_type"
    android:backgroundTintMode="multiply"
    tools:context=".main.">

    <TextView
        android:id="@+id/nombre_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:justificationMode="inter_word"
        android:text="@string/camino_real"
        android:textAlignment="center"
        android:textColor="@color/primero"
        android:textSize="24sp"
        android:theme="@style/Barichara"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/pict_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/border_radius"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/camino_real_de_guanes" />

                <TextView
                    android:id="@+id/descripcion_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="550dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="8dp"
                    android:justificationMode="inter_word"
                    android:text="@string/camino_real_description_pg1"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:theme="@style/Barichara"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <ImageButton
        android:id="@+id/imageButton6"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border_radius"
        android:clickable="true"
        android:theme="@style/Barichara"
        android:tint="#9EFFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:id="@+id/calificacion_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="@string/calificacion_textview"
        android:textColor="@color/design_default_color_on_secondary"
        android:textColorHighlight="@color/material_on_surface_emphasis_medium"
        android:textColorHint="@color/material_on_surface_emphasis_medium"
        android:textColorLink="@color/material_on_background_emphasis_medium"
        app:layout_constraintBottom_toTopOf="@+id/nombre_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>