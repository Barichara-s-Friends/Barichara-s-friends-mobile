        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:gravity="center">


            <HorizontalScrollView
                android:layout_width="409dp"
                android:layout_height="206dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/park1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/bioparque_moncora_img1" />

                    <ImageButton
                        android:id="@+id/park2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        app:layout_constraintStart_toEndOf="@id/park1"
                        app:layout_constraintTop_toTopOf="@id/park1"
                        app:srcCompat="@drawable/bioparque_moncora_img2" />

                    <ImageButton
                        android:id="@+id/park3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        app:layout_constraintStart_toEndOf="@id/park2"
                        app:layout_constraintTop_toTopOf="@id/park2"
                        app:srcCompat="@drawable/bioparque_moncora_img3" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/border_radius"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/camino_real_de_guanes" />

            <TextView
                android:id="@+id/textViewCaminoRealDescripcionPg1"
                android:layout_width="wrap_content"
