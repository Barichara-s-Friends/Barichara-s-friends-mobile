<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Proyecto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primero</item>
        <item name="colorPrimaryVariant">@color/segundo</item>
        <item name="colorOnPrimary">@color/tercero</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.Proyecto">
        <item name="android:windowBackground">@drawable/splass</item>
    </style>

    <style name="Barichara" parent="Theme.Proyecto">
        <item name="colorPrimary">@color/primero</item>
        <item name="colorPrimary">@color/segundo</item>
        <item name="colorPrimary">@color/tercero</item>
    </style>
</resources>
